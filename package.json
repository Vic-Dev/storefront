{
  "name": "@storefront/core",
  "version": "0.0.32-development",
  "description": "Core library for StoreFront components",
  "repository": {
    "type": "git",
    "url": "https://github.com/groupby/storefront-core.git"
  },
  "bugs": {
    "url": "https://github.com/groupby/storefront-core/issues"
  },
  "homepage": "https://github.com/groupby/storefront-core#readme",
  "author": "Ben Teichman <ben.teichman@groupbyinc.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module:esnext": "esnext/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/",
    "esnext/",
    "src/"
  ],
  "scripts": {
    "start": "start-runner -p re-start/presets/typescript",
    "esnext": "npm start build -- -- --compileOpts.configFile tsconfig.esnext.json --outDir esnext",
    "dev": "npm start dev",
    "test": "npm start test",
    "tdd": "npm start tdd",
    "prepush": "npm start prepush",
    "prepublish": "npm start build && npm run esnext"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "restart": {
      "testFiles": [
        "test/bootstrap.ts",
        "test/unit/**/*.ts"
      ],
      "releaseOpts": {
        "public": true
      }
    }
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.31",
    "@types/sinon": "^2.2.1",
    "@types/sinon-chai": "^2.7.28",
    "chai": "^4.0.0",
    "condition-circle": "^1.5.0",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.3",
    "mocha-suite": "^1.0.9",
    "re-start": "^1.14.8",
    "sinon": "^2.3.4",
    "sinon-chai": "^2.11.0",
    "start-simple-cli": "^4.1.1",
    "tslint": "^5.2.0",
    "tslint-config-groupby": "^1.0.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  },
  "dependencies": {
    "@storefront/flux-capacitor": "1.0.2",
    "@types/deep-assign": "^0.1.0",
    "@types/js-cookie": "^2.0.28",
    "@types/loglevel": "^1.4.29",
    "@types/query-string": "^4.3.1",
    "@types/riot": "^2.6.2",
    "@types/urijs": "^1.15.32",
    "deep-assign": "^2.0.0",
    "dot-prop": "^4.1.1",
    "gb-tracker-client": "^3.4.3",
    "js-cookie": "^2.1.4",
    "lodash.kebabcase": "^4.1.1",
    "loglevel": "^1.4.1",
    "query-string": "^4.3.4",
    "riot": "^3.4.4",
    "urijs": "^1.18.10"
  }
}
